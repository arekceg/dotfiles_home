<?xml version="1.0" encoding="UTF-8"?>
<settings
		xmlns="http://maven.apache.org/SETTINGS/1.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://maven.apache.org/SETTINGS/1.0.0
			http://maven.apache.org/xsd/settings-1.0.0.xsd
		">

	<mirrors>

		<mirror>
			<id>bravura-repo</id>
			<url>http://repo-waw.bravurasolutions.local/maven</url>
			<mirrorOf>external:*</mirrorOf>
		</mirror>

	</mirrors>

	<proxies>

		<proxy>
			<id>bravura</id>
			<active>true</active>
			<protocol>http</protocol>
			<host>wawprx01.bravurasolutions.local</host>
			<port>3128</port>
			<nonProxyHosts>localhost|*.bravurasolutions.local|*.bravurasolutions.com</nonProxyHosts>
		</proxy>

	</proxies>

	<activeProfiles>
		<activeProfile>dev</activeProfile>
		<activeProfile>repos-bravura</activeProfile>
	</activeProfiles>

	<profiles>

		<profile>
			<id>repos-bravura</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<repositories>

				<repository>
					<id>bravura-releases</id>
					<name>Bravura Releases</name>
					<url>http://repo.bravurasolutions.com/libs-release</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>

				<repository>
					<id>bravura-snapshots</id>
					<name>Bravura Snapshots</name>
					<url>http://repo.bravurasolutions.com/libs-snapshot</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>

			</repositories>
			<pluginRepositories>

				<pluginRepository>
					<id>bravura-releases</id>
					<name>Bravura Releases</name>
					<url>http://repo.bravurasolutions.com/libs-release</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</pluginRepository>

				<pluginRepository>
					<id>bravura-snapshots</id>
					<name>Bravura Snapshots</name>
					<url>http://repo.bravurasolutions.com/libs-snapshot</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</pluginRepository>

			</pluginRepositories>
		</profile>

	</profiles>

</settings>

